{
  "name": "jeremy-robards-portfolio",
  "version": "1.0.0",
  "description": "Jeremy Robards Portfolio - GitHub Pages Compatible",
  "type": "module",
  "scripts": {
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./tailwind/input.css -o ./css/tailwind.css --minify",
    "dev": "tailwindcss -i ./tailwind/input.css -o ./css/tailwind.css --watch",
    "serve": "python -m http.server 8000",
    "generate:manifest": "node generate-manifest.mjs",
    "clean": "rimraf dist .build reports",
    "deploy": "wrangler pages deploy . --project-name jeremyrobards-site --branch production",
    "deploy:verbose": "wrangler pages deploy . --project-name jeremyrobards-site --branch production --verbose",
    "deploy:test": "wrangler pages deploy _tinydeploy --project-name jeremyrobards-site --branch production",
    "cms:setup": "node cms/setup.js",
    "cms:dev": "node cms/serve.js",
    "cms:export": "ts-node cms/export.ts",
    "cms:publish": "node cms/publish.js",
    "cms:compile": "tsc",
    "cms:proxy": "npx decap-server",
    "cms:build": "node -e \"console.log('cms build pipeline pending')\"",
    "cms:test": "node cms/test-publish.js",
    "worker:deploy": "cd worker && wrangler deploy",
    "worker:dev": "cd worker && wrangler dev",
    "worker:tail": "cd worker && wrangler tail",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "lint:report": "eslint . --format html --output-file reports/eslint.html",
    "fmt": "prettier --check .",
    "fmt:write": "prettier --write .",
    "types": "tsc --noEmit",
    "style": "stylelint \"**/*.css\" --ignore-path .prettierignore",
    "style:fix": "stylelint \"**/*.css\" --fix --ignore-path .prettierignore",
    "md:lint": "markdownlint \"**/*.md\" --ignore node_modules --ignore docs-archive",
    "health": "node scripts/health-check.mjs",
    "inventory": "node scripts/generate-inventory.mjs",
    "deadcode": "ts-prune --project tsconfig.json > reports/deadcode.txt",
    "circular": "madge --circular --extensions js,ts,mjs .",
    "audit": "npm audit --json > reports/audit.json",
    "docs:test": "node scripts/test-docs.mjs",
    "docs:links": "markdown-link-check README.md --config .markdown-link-check.json",
    "docs:spell": "cspell \"**/*.md\" --config .cspell.json",
    "ux:report": "node scripts/generate-ux-report.mjs",
    "check": "npm run lint && npm run types && npm run fmt",
    "fix": "npm run lint:fix && npm run fmt:write && npm run style:fix",
    "test:all": "npm run check && npm run docs:test",
    "precommit": "npm run check"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.14.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "axe-core": "^4.11.0",
    "cspell": "^9.2.1",
    "dotenv": "^16.4.5",
    "esbuild": "^0.21.5",
    "esbuild-visualizer": "^0.7.0",
    "eta": "^3.3.0",
    "gray-matter": "^4.0.3",
    "html2canvas": "^1.4.1",
    "http-server": "^14.1.1",
    "inquirer": "^9.2.12",
    "markdown-link-check": "^3.14.1",
    "marked": "^12.0.2",
    "playwright": "^1.56.1",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "portfolio",
    "github-pages",
    "tailwindcss",
    "vanilla-js"
  ],
  "author": "Jeremy Robards",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}
